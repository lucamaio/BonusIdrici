@{
    ViewData["Title"] = "Statistiche";
}

<div class="container-fluid py-4">
    <!-- HEADER -->
    <div class="text-center mb-5">
        <h2 class="fw-bold">
            <i class="fa-solid fa-chart-line me-2 text-primary"></i> Statistiche Generali
        </h2>
        <p class="text-muted">
            Panoramica in tempo reale sugli enti, utenze idriche e toponimi.
        </p>
    </div>

    <!-- CARDS STATISTICHE PRINCIPALI -->
    <div class="row g-4 mb-5">
        <div class="col-6 col-lg-3">
            <div class="card shadow-sm border-0 text-center p-3 h-100">
                <i class="fa-solid fa-city fa-2x text-primary mb-2"></i>
                <h6 class="fw-bold">Totale Enti</h6>
                <h3 class="fw-bolder">@ViewBag.TotaleEnti</h3>
                <div class="progress mt-2" style="height:6px;">
                    <div class="progress-bar bg-primary" role="progressbar" data-progress="80"></div>
                </div>
            </div>
        </div>

        <div class="col-6 col-lg-3">
            <div class="card shadow-sm border-0 text-center p-3 h-100">
                <i class="fa-solid fa-droplet fa-2x text-info mb-2"></i>
                <h6 class="fw-bold">Utenze Idriche</h6>
                <h3 class="fw-bolder">@ViewBag.TotaleUtenze</h3>
                <div class="progress mt-2" style="height:6px;">
                    <div class="progress-bar bg-info" role="progressbar" data-progress="65"></div>
                </div>
            </div>
        </div>

        <div class="col-6 col-lg-3">
            <div class="card shadow-sm border-0 text-center p-3 h-100">
                <i class="fa-solid fa-map-location-dot fa-2x text-success mb-2"></i>
                <h6 class="fw-bold">Totale Toponimi</h6>
                <h3 class="fw-bolder">@ViewBag.TotaleToponomi</h3>
                <div class="progress mt-2" style="height:6px;">
                    <div class="progress-bar bg-success" role="progressbar" data-progress="70"></div>
                </div>
            </div>
        </div>

        <div class="col-6 col-lg-3">
            <div class="card shadow-sm border-0 text-center p-3 h-100">
                <i class="fa-solid fa-map-pin fa-2x text-danger mb-2"></i>
                <h6 class="fw-bold">Toponimi da Sistemare</h6>
                <h3 class="fw-bolder">@ViewBag.TotaleToponomiDaSistemare</h3>
                <div class="progress mt-2" style="height:6px;">
                    <div class="progress-bar bg-danger" role="progressbar" data-progress="40"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- SEZIONE GRAFICI -->
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 p-3 h-100">
                <h6 class="fw-bold text-center mb-3">
                    <i class="fa-solid fa-file-circle-check text-primary me-2"></i> Report per Ente
                </h6>
                <canvas id="reportEnteChart"></canvas>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 p-3 h-100">
                <h6 class="fw-bold text-center mb-3">
                    <i class="fa-solid fa-droplet text-info me-2"></i> Utenze per Ente
                </h6>
                <canvas id="utenzeEnteChart"></canvas>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 p-3 h-100">
                <h6 class="fw-bold text-center mb-3">
                    <i class="fa-solid fa-users text-success me-2"></i> Anagrafe per Ente
                </h6>
                <canvas id="anagrafeChart"></canvas>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 p-3 h-100">
                <h6 class="fw-bold text-center mb-3">
                    <i class="fa-solid fa-map-location-dot text-warning me-2"></i> Toponimi per Ente
                </h6>
                <canvas id="toponomiChart"></canvas>
            </div>
        </div>

        <div class="col-lg-6 mx-auto">
            <div class="card shadow-sm border-0 p-3 h-100">
                <h6 class="fw-bold text-center mb-3">
                    <i class="fa-solid fa-chart-pie text-danger me-2"></i> Domande per Esito
                </h6>
                <canvas id="domandeEsitoChart" style="max-height:350px;"></canvas>
            </div>
        </div>  
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // ANIMAZIONE PROGRESS BAR
        document.querySelectorAll('.progress-bar').forEach(bar => {
            let value = bar.getAttribute('data-progress');
            bar.style.width = '0%';
            setTimeout(() => {
                bar.style.transition = 'width 1.5s ease-in-out';
                bar.style.width = value + '%';
            }, 200);
        });

        // Grafico a barre: Report per ente
        new Chart(document.getElementById('reportEnteChart'), {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.ReportLabels)),
                datasets: [{
                    label: 'Report effettuati',
                    data: @Html.Raw(Json.Serialize(ViewBag.ReportValues)),
                    backgroundColor: 'rgb(212, 8, 32)'
                }]
            },
            options: { responsive: true, scales: { y: { beginAtZero: true } } }
        });

        // Grafico a barre: Utenze per ente
        new Chart(document.getElementById('utenzeEnteChart'), {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.UtenzeIdricheLabels)),
                datasets: [{
                    label: 'Utenze Idriche',
                    data: @Html.Raw(Json.Serialize(ViewBag.UtenzeIdricheValues)),
                    backgroundColor: '#0d6efd'
                }]
            },
            options: { responsive: true, scales: { y: { beginAtZero: true } } }
        });

        // Grafico a barre: Anagrafe per ente
        new Chart(document.getElementById('anagrafeChart'), {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.AnagrafeLabels)),
                datasets: [{
                    label: 'Anagrafe',
                    data: @Html.Raw(Json.Serialize(ViewBag.AnagrafeValues)),
                    backgroundColor: '#198754'
                }]
            },
            options: { responsive: true, scales: { y: { beginAtZero: true } } }
        });

        // Grafico a barre: Toponimi per ente
        new Chart(document.getElementById('toponomiChart'), {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.ToponimiLabels)),
                datasets: [{
                    label: 'Toponimi',
                    data: @Html.Raw(Json.Serialize(ViewBag.ToponimiValues)),
                    backgroundColor: '#ffc107'
                }]
            },
            options: { responsive: true, scales: { y: { beginAtZero: true } } }
        });

        // Grafico a torta: Domande per esito
        new Chart(document.getElementById('domandeEsitoChart'), {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.DomandeLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.DomandeValues)),
                    backgroundColor: ['#28a745', '#FFD700', '#B20000', "#000000"]
                }]
            },
            options: { responsive: true }
        });
    </script>
}
