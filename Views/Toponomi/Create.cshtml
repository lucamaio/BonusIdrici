@{
    ViewData["Title"] = "Crea un Toponimo";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0">Crea un Toponimo</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Toponomi" asp-action="crea" method="POST" enctype="multipart/form-data">
                        @* Campo nascosto per salvare l'ID dell'ente *@
                        <input type="hidden" name="idEnte" value="@ViewBag.IdEnte" />

                        <div class="mb-3">
                            <label for="denominazione" class="form-label">Denominazione* </label>
                            <input type="text" class="form-control" id="denominazione" name="denominazione" required>
                        </div>

                        <div class="mb-3">
                            <label for="normalizzazione" class="form-label">Normalizzazione*</label>
                            <input type="text" class="form-control" id="normalizzazione" name="normalizzazione" required>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3">Crea Toponimo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
