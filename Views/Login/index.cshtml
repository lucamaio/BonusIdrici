@{
    ViewData["Title"] = "Login";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="icon-circle-large mx-auto mb-3">
                            <i class="fas fa-lock"></i>
                        </div>
                        <h3 class="fw-bold mb-0">Accedi</h3>
                        <p class="text-secondary">Inserisci le tue credenziali per accedere al pannello di controllo.</p>
                    </div>

                    <form asp-controller="Login" asp-action="Accedi" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="email" class="form-label fw-bold">Email</label>
                            <input type="email" class="form-control form-control-lg rounded-3" id="email" name="email" placeholder="es. nome.cognome@mail.com" required>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label fw-bold">Password</label>
                            <input type="password" class="form-control form-control-lg rounded-3" id="password" name="password" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-action btn-lg rounded-3">Accedi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>