                    '<"justify-content-between dt-layout-table"t>',
                buttons: [
                    {
                        extend: 'collection',
                        className: 'btn buttons-collection btn-label-primary dropdown-toggle me-4',
                        text: '<span class="d-flex align-items-center gap-2"><i class="bx bx-export me-sm-1"></i> <span class="d-none d-sm-inline-block">Export</span></span>',
                        buttons: [
                            { extend: 'copy', text: 'Copia' },
                            { extend: 'excel', text: 'Excel' },
                            { extend: 'pdf', text: 'PDF' },
                            { extend: 'print', text: 'Stampa' },
                            { extend: 'colvis', text: 'Visibilità Colonne' } // Per mostrare/nascondere colonne
                        ]
                    },
                    @* {
                        text: '<span class="d-flex align-items-center gap-2"><i class="bx bx-plus icon-sm"></i> <span class="d-none d-sm-inline-block">Aggiungi Nuovo Record</span></span>',
                        className: 'btn create-new btn-primary',
