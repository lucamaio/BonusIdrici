@* Views/Azioni/RiepilogoDatiEnte.cshtml *@
@model IEnumerable<BonusIdrici2.Models.ViewModels.RiepilogoDatiViewModel> 

@{
    ViewData["Title"] = "Riepilogo Dati Ente";
    var selectedEnteId = ViewBag.SelectedEnteId;
    var selectedEnteNome = ViewBag.SelectedEnteNome;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0">Dati Disponibili per l'Ente: <span class="fw-bold">@selectedEnteNome</span></h3>
                    <small>ID Ente: @selectedEnteId</small>
                </div>
                <div class="card-body p-4">

                    @if (Model != null && Model.Any())
                    {
                        <p class="lead">Seleziona una data di inserimento per scaricare i report correlati.</p>
                        <div class="table-responsive">
                            @* {{-- La tua tabella esistente, con l'ID per DataTables e le classi necessarie --}} *@
                            <table id="riepilogoTable" class="table table-bordered table-responsive dataTable dtr-column collapsed" style="width: 100%;">
                                <thead class="table-dark">
                                    <tr>
                                        @* {{-- Queste sono le intestazioni delle tue colonne reali --}} *@
                                        <th>Giorno Inserimento</th>
                                        <th>Numero Dati Inseriti</th>
                                        <th>Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.DataCreazione?.ToString("dd/MM/yyyy")</td>
                                            <td>@item.NumeroDatiInseriti</td>
                                            <td>
                                                @{
                                                    // Anche qui, usa '?.ToString("yyyy-MM-dd")' per sicurezza e per il formato URL
                                                    var dataUrl = item.DataCreazione?.ToString("yyyy-MM-dd");
                                                }
                                                <div class="btn-group" role="group" aria-label="Download options">
                                                    <a href="@Url.Action("ScaricaCsv", "Azioni", new { enteId = selectedEnteId, DataCreazione = dataUrl, tipoReport = "Esito Bonus Idrico" })" class="btn btn-sm btn-success me-2">
                                                        <i class="bi bi-download"></i> Scarica Esito Bonus Idrico
                                                    </a>
                                                    <a href="@Url.Action("ScaricaCsv", "Azioni", new { enteId = selectedEnteId, DataCreazione = dataUrl, tipoReport = "Esito Competenza Territoriale" })" class="btn btn-sm btn-info">
                                                        <i class="bi bi-download"></i> Scarica Esito Competenza Territoriale
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            Nessun dato di report trovato per l'ente selezionato.
                        </div>
                    }

                    <div class="d-grid mt-4">
                        <a href="@Url.Action("Report", "Azioni")" class="btn btn-outline-secondary">Torna alla Selezione Ente</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

