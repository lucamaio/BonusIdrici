@* Consolidato i due blocchi ViewData["Title"] in uno solo per chiarezza *@
@{
    ViewData["Title"] = "Genera Risultati";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header header-classic text-white text-center rounded-top-4">
                    <h3 class="mb-0">Carica il file INPS</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Azioni" asp-action="LoadFileINPS" method="post" enctype="multipart/form-data" onsubmit="showLoader()">
                        
                        @* --- INIZIO AGGIUNTA SELECT ENTE QUI --- *@
                        <div class="mb-3">
                            <label for="selectedEnteId" class="form-label">Seleziona l'Ente</label>
                            <select id="selectedEnteId" name="selectedEnteId" class="form-select" required>
                                <option value="">-- Seleziona un Ente --</option>
                                @if (ViewBag.Enti != null)
                                {
                                    foreach (var ente in ViewBag.Enti)
                                    {
                                        <option value="@ente.id">@ente.nome</option>
                                    }
                                }
                            </select>
                        </div>
                        @* --- FINE AGGIUNTA SELECT ENTE QUI --- *@

                        <div class="mb-3">
                            <label for="csv_file" class="form-label">Seleziona file INPS</label>
                            <input type="file" name="csv_file" class="form-control" required accept=".csv">
                        </div>

                      <div class="mb-3">
                        <label for="serie" class="form-label">Serie</label>
                        <input type="number" id="serie" name="serie" min="0" max="5" class="form-control">
                    </div>

                    <div class="mb-3">
                        <input type="checkbox" id="confrontoCivico" name="confrontoCivico" class="form-check-input" value="true">
                        <label for="confrontoCivico" class="form-check-label">Confronta numero civico</label>
                    </div>

                    <div class="mb-3">
                        <input type="checkbox" id="escludiComponenti" name="escludiComponenti" class="form-check-input" value="true">
                        <label for="escludiComponenti" class="form-check-label">
                            Escludi eventuali incongruenze relative al numero dei componenti del nucleo familiare
                        </label>
                    </div>

                    <div class="mb-3">
                        <div class="info-text mt-2">
                            Indicare il numero di fatture annuali per ciascuna persona. <br><br>
                            • Se la fatturazione avviene una sola volta all’anno, impostare il valore su <strong>0</strong>. <br><br>
                            • Se il campo viene lasciato vuoto, il sistema utilizzerà automaticamente la serie di default associata alla scheda dell’ente. <br><br>
                            • Qualora la serie di default non coincida con quella reale, è sempre possibile modificarla all’interno della pagina <em>Dettagli Report</em>. <br><br>
                            • Se si seleziona l’opzione <strong>Confronta numero civico</strong>, il sistema confronterà anche il numero civico durante la generazione dei risultati.<br><br>
                            • Selezionando l’opzione <strong>Escludi incongruenze componenti</strong>, il sistema ignorerà eventuali discrepanze relative al numero dei componenti del nucleo.Eventuali divergenza non saranno segnalate nel report.<br><br>
                        </div>
                    </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-classic">Carica File</button>
                        </div>
                    </form>

                    <div id="loader" class="text-center mt-3" style="display:none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Caricamento...</span>
                        </div>
                        <p class="mt-2">Elaborazione in corso, attendere...</p>
                    </div>


                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-info mt-3" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showLoader() {
            document.getElementById("loader").style.display = "block";
        }
    </script>
}