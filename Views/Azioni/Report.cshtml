@* Views/Azioni/GeneraEsitoCompetenza.cshtml *@
@{
    ViewData["Title"] = "Report"; 
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-white text-center rounded-top-4" 
                     style="background: linear-gradient(90deg, #0d6efd, #0a58ca);">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-building me-2"></i> Seleziona Ente
                    </h3>
                </div>

                <div class="card-body p-4">
                    <form asp-controller="Azioni" asp-action="RiepilogoDatiEnte" method="post">
                        
                        <div class="mb-4">
                            <label for="selectedEnteId" class="form-label fw-semibold">
                                <i class="bi bi-list-ul me-1"></i> Scegli l'Ente
                            </label>
                            <select id="selectedEnteId" name="selectedEnteId" class="form-select shadow-sm" required>
                                <option value="">-- Seleziona un Ente --</option>
                                @if (ViewBag.Enti != null)
                                {
                                    foreach (var ente in ViewBag.Enti)
                                    {
                                        <option value="@ente.id">@ente.nome</option> 
                                    }
                                }
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-search me-1"></i> Visualizza Dati Ente
                            </button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-info mt-4 shadow-sm border-0 rounded-3">
                            <i class="bi bi-info-circle me-2"></i> @ViewBag.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
