@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var session = HttpContextAccessor.HttpContext?.Session;
    var idUser = session?.GetString("idUser");
    var username = session?.GetString("Username");
    var isLogged = !string.IsNullOrEmpty(idUser);
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BonusIdrici</title>

    <!-- ✅ CSS principali -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <!-- ✅ DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.0.2/css/buttons.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.2/css/responsive.bootstrap5.min.css" />

    <!-- ✅ CSS del progetto -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BonusIdrici2.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm mb-5">
            <div class="container-fluid">

                <!-- Pulsante Sidebar -->
                <button class="btn btn-link text-white fs-4 me-3" type="button" onclick="toggleSidebar()">
                    <i class="bi bi-list"></i>
                </button>

                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-droplet-fill me-2"></i> BonusIdrici
                </a>

                <!-- Menu principale -->
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="Info">
                                <i class="fa-solid fa-circle-info me-1"></i> Info
                            </a>
                        </li>

                        <!-- Dropdown profilo utente -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold d-flex align-items-center" href="#"
                               id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>
                                @(isLogged && !string.IsNullOrWhiteSpace(username) ? username : "Profilo")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                @if (isLogged)
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Dettagli">
                                            <i class="bi bi-info-circle me-2"></i> Informazioni Utente
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item text-danger fw-semibold" asp-controller="Login" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item text-primary fw-semibold" asp-controller="Login" asp-action="Index">
                                            <i class="bi bi-box-arrow-in-right me-2"></i> Login
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- SIDEBAR -->
        <div class="sidebar" id="sidebar">
            <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door me-2"></i> Home
            </a>
            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="Info">
                <i class="fa-solid fa-circle-info me-1"></i> Info
            </a>
            <a class="nav-link fw-semibold" href="https://www.p-service.it/index.html" style="color: #fff !important">
                <i class="bi bi-telephone me-2"></i> Contatti
            </a>
        </div>

        <div class="overlay" id="overlay" onclick="toggleSidebar()"></div>
    </header>

    <!-- CONTENUTO PRINCIPALE -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer-app mt-auto mb-0 py-10">
        <div class="container">
            <div class="row gy-4 align-items-center">

                <!-- Brand -->
                <div class="col-12 col-md-4 text-center text-md-start">
                    <h5 class="fw-semibold mb-1">Software BonusIdrici</h5>
                    <small class="text-muted" style="color: #fff !important;">
                        Gestione pratiche per Bonus Idrico
                    </small>
                </div>

                <!-- Link -->
                <div class="col-12 col-md-4 text-center">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <a asp-area="" asp-controller="Home" asp-action="Info" class="footer-link">Info</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://www.p-service.it/index.html?#chisiamo" class="footer-link">Chi siamo</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://www.p-service.it/index.html?#contattaci" class="footer-link">Contatti</a>
                        </li>
                    </ul>
                </div> 

                <!-- Copyright -->
                <div class="col-12 col-md-4 text-center text-md-end">
                    <small class="text-muted" style="color: #fff !important;">
                        ©2026<a href="https://www.p-service.it" target="_blank" class="footer-link"> Point Service S.r.l.</a> - Tutti i diritti riservati.
                    </small>
                </div>

            </div>
        </div>
    </footer>


    <!-- ✅ SCRIPT (ordinati e senza duplicati) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.2/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.2/js/responsive.bootstrap5.min.js"></script>

    <!-- Script Sidebar -->
    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("active");
            document.getElementById("overlay").classList.toggle("active");
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
