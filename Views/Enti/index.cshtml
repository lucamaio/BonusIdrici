@model IEnumerable<BonusIdrici2.Models.ViewModels.EntiViewModel>

@{
    ViewData["Title"] = "Enti";
}

<div class="container-xxl flex-grow-1 py-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-4 w-100">
                <!-- Header -->
                <div class="card-header border-0 rounded-top-4 d-flex flex-column align-items-center p-4"
                     style="background: linear-gradient(90deg, rgb(13, 110, 253), rgb(7, 74, 175)); color: #fff;">
                    <h3 class="mb-1 fw-bold">
                        <i class="bi bi-building me-2"></i> Enti
                    </h3>
                </div>

                <!-- Barra di caricamento -->
                <div id="loadingBarContainer" class="progress rounded-0" style="height: 6px; display: none;">
                    <div id="loadingBar" class="progress-bar progress-bar-striped progress-bar-animated bg-primary"
                         role="progressbar" style="width: 0%"></div>
                </div>

                <!-- Body -->
                <div class="card-body p-4 position-relative">
                    @if (Model != null && Model.Any())
                    {
                        <p class="lead mb-4 text-muted">Di seguito sono elencati gli Enti Comunali.</p>

                        <div class="table-responsive w-100" id="tableWrapper" style="display: none;">
                            <table id="riepilogoTable" class="table table-hover align-middle border-bottom w-100">
                                <thead class="table-primary">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nome</th>
                                        <th>ISTAT</th>
                                        <th>Codice Fiscale</th>
                                        <th>Partita IVA</th>
                                        <th>CAP</th>
                                        <th>Provincia</th>
                                        <th>Regione</th>
                                        <th>Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.id</td>
                                            <td>@item.nome</td>
                                            <td>@item.istat</td>
                                            <td>@item.CodiceFiscale</td>
                                            <td>@item.partitaIva</td>
                                            <td>@item.Cap</td>
                                            <td>@item.Provincia</td>
                                            <td>@item.Regione</td>
                                            <td class="text-center">
                                                <a class="btn btn-sm btn-light border me-1" title="Modifica Ente"
                                                   href="@Url.Action("Modifica", "Enti", new { id = item.id, nome = item.nome, istat = item.istat, partitaIva = item.partitaIva, CodiceFiscale = item.CodiceFiscale, Cap = item.Cap, Provincia = item.Provincia, Regione = item.Regione, Nostro = item.Nostro })">
                                                    <i class="bi bi-pencil-square text-primary"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center shadow-sm rounded-3">
                            <i class="bi bi-exclamation-triangle me-2"></i> Nessun Ente trovato.
                        </div>
                    }

                    <div class="d-grid mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg shadow-sm">
                            <i class="bi bi-arrow-left-circle me-2"></i> Torna alla Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.bootstrap5.min.js"></script> *@

    <script>
        $(document).ready(function () {
            // Mostra barra all'inizio
            $("#loadingBarContainer").show();
            var progress = 0;
            var interval = setInterval(function () {
                if (progress < 90) {
                    progress += 10;
                    $("#loadingBar").css("width", progress + "%");
                }
            }, 300);

            var table = $('#riepilogoTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                responsive: true,
                language: { url: "https://cdn.datatables.net/plug-ins/2.0.8/i18n/it-IT.json" },
                dom: '<"row mb-3"<"col-sm-6"l><"col-sm-6 text-end"Bf>>t<"row mt-3"<"col-sm-6"i><"col-sm-6 text-end"p>>',
                buttons: [
                    {
                        text: '<i class="bi bi-plus-circle me-1"></i> Aggiungi',
                        className: 'btn btn-sm btn-success',
                        action: function () {
                            window.location.href = '@Url.Action("Create", "Enti")';
                        }
                    }
                ]
            });

            // Quando la tabella è pronta → completa la barra e mostra tabella
            table.on('init', function () {
                clearInterval(interval);
                $("#loadingBar").css("width", "100%");
                setTimeout(function () {
                    $("#loadingBarContainer").fadeOut();
                    $("#tableWrapper").fadeIn();
                }, 500);
            });
        });
    </script>
}

