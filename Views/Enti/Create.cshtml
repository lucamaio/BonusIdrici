@{
    ViewData["Title"] = "Aggiungi un Ente";
}

<div class="report-page container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-11">
            <div class="modern-card shadow rounded-4 border-0">

                <!-- HEADER -->
                <div class="card-header header-classic border-0 rounded-top-4 d-flex flex-column align-items-center p-4">
                    <h3 class="mb-1 fw-bold fs-4">
                        <i class="fa-solid fa-pen-to-square me-2"></i>
                        <span class="fw-semibold">Aggiungi un Ente</span>
                    </h3>
                </div>

                <!-- FORM -->
                <div class="modern-card-body p-4 small">
                    <form asp-controller="Enti" asp-action="Crea" method="POST" enctype="multipart/form-data">
                       <div class="accordion" id="accordionEnte">

                            <!-- SEZIONE 1 -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading1">
                                    <button class="accordion-button fs-6" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
                                        <i class="fa-solid fa-city me-2"></i> Dati Identificativi
                                    </button>
                                </h2>
                                <div id="collapse1" class="accordion-collapse collapse show" aria-labelledby="heading1"
                                     data-bs-parent="#accordionEnte">
                                    <div class="accordion-body">
                                        <div class="row row-cols-1 row-cols-md-3 g-4">
                                            <div>
                                                <label for="nome" class="form-label">Nome: *</label>
                                                <input type="text" class="form-control" id="nome" name="nome" minlength="2" required>
                                            </div>

                                            <div>
                                                <label for="cap" class="form-label">CAP: *</label>
                                                <input type="text" class="form-control" id="cap" name="cap" required>
                                            </div>

                                            <div>
                                                <label for="istat" class="form-label">ISTAT: *</label>
                                                <input type="text" class="form-control" id="istat" name="istat" required>
                                            </div>

                                            <div>
                                                <label for="provincia" class="form-label">Provincia: *</label>
                                                <input type="text" class="form-control" id="provincia" name="provincia" maxlength="2">
                                            </div>

                                            <div>
                                                <label for="regione" class="form-label">Regione: </label>
                                                <input type="text" class="form-control" id="regione" name="regione">
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- SEZIONE 2 -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading2">
                                    <button class="accordion-button collapsed fs-6" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                                        <i class="fa-solid fa-address-card me-2"></i>Informazioni fiscali
                                    </button>
                                </h2>
                                <div id="collapse2" class="accordion-collapse collapse" aria-labelledby="heading2"
                                     data-bs-parent="#accordionEnte">
                                    <div class="accordion-body">
                                        <div class="row row-cols-1 row-cols-md-3 g-4">
                                             
                                            <div>
                                                <label for="codiceFiscale" class="form-label">Codice Fiscale: *</label>
                                                <input type="text" class="form-control" id="codiceFiscale" name="codiceFiscale" maxlength="11" required>
                                            </div>

                                            <div class="mb-3">
                                                <label for="partitaIVA" class="form-label">Partita IVA: *</label>
                                                <input type="text" class="form-control" id="partitaIVA" name="partitaIVA" maxlength="11" required>
                                            </div>

                                            <div class="mb-3">
                                                <label for="serie" class="form-label">Serie: *</label>
                                                <input type="number" class="form-control" id="serie" name="serie" min="0" max="5" value="0" required>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- SEZIONE 3 -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading3">
                                    <button class="accordion-button collapsed fs-6" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
                                        <i class="fa-solid fa-user-tie me-2"></i> Sezione ADMIN
                                    </button>
                                </h2>
                                <div id="collapse3" class="accordion-collapse collapse" aria-labelledby="heading3"
                                    data-bs-parent="#accordionEnte">
                                    <div class="accordion-body">
                                        <div class="row row-cols-1 row-cols-md-3 g-4">
                                            
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="phiraha" name="Phiraha" value="true">
                                                <label class="form-check-label" for="phiraha">
                                                    Phiraha
                                                </label>
                                            </div>

                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="selene" name="Selene" value="true">
                                                <label class="form-check-label" for="selene">
                                                    Selene
                                                </label>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        
                        <!-- BOTTONI -->
                        <hr class="my-4" />
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index","Enti")"
                               class="btn btn-outline-secondary btn-sm rounded-3">
                                <i class="fa-solid fa-arrow-left"></i> Torna alla consultazione
                            </a>
                            <button type="submit" class="btn btn-primary btn-sm rounded-3">
                                <i class="fa-solid fa-check"></i> Crea
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
