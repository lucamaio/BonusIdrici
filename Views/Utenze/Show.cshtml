@model IEnumerable<Models.ViewModels.UtenzeViewModel>

@{
    ViewData["Title"] = "Utenze Ente";
    var selectedEnteId = ViewBag.SelectedEnteId;
    var selectedEnteNome = ViewBag.SelectedEnteNome;
}

<div class="container-xxl flex-grow-1 py-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-4 w-100">
                <!-- Header -->
                <div class="card-header header-utenze border-0 rounded-top-4 d-flex flex-column align-items-center p-4">
                    <h3 class="mb-1 fw-bold">
                        <i class="bi bi-droplet-fill me-2"></i> Utenze -
                        <span class="fw-semibold">@selectedEnteNome</span>
                    </h3>
                    <small>ID Ente: @selectedEnteId</small>
                </div>

                <!-- Barra di caricamento -->
                <div id="loadingBarContainer" class="progress rounded-0" style="height: 6px; display: none;">
                    <div id="loadingBar" class="progress-bar progress-bar-striped progress-bar-animated bg-primary"
                         role="progressbar" style="width: 0%"></div>
                </div>

                <!-- Body -->
                <div class="card-body p-4 position-relative">
                    @if (Model != null && Model.Any())
                    {
                        <div style="background-color: #f8f9fa; border-radius: 12px;">
                            <div class="row g-3">
                                <!-- Stat Box 1 -->
                                <div class="col-md-4">
                                    <div class="card border-0 shadow-sm text-center">
                                        <div class="card-body">
                                            <i class="fa-solid fa-droplet fa-2x text-primary mb-2"></i>
                                            <h6>Totale Utenze</h6>
                                            <h4>@ViewBag.TotaleUtenze</h4>
                                        </div>
                                    </div>
                                </div>

                                <!-- Stat Box 2 -->
                                <div class="col-md-4">
                                    <div class="card border-0 shadow-sm text-center">
                                        <div class="card-body">
                                            <i class="fa-solid fa-user-plus fa-2x text-success mb-2"></i>
                                            <h6>Utenze Iscrivendo/Iscritti</h6>
                                            <h4>@ViewBag.UtenzeIscrivendo</h4>
                                        </div>
                                    </div>
                                </div>

                                <!-- Stat Box 3 -->
                                <div class="col-md-4">
                                    <div class="card border-0 shadow-sm text-center">
                                        <div class="card-body">
                                            <i class="fa-solid fa-user-minus fa-2x text-danger mb-2"></i>
                                            <h6>Utenze Cancellando e Cancellato</h6>
                                            <h4>@ViewBag.UtenzeCancellate</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <!-- Stat Box 4 -->
                                <div class="col-md-4">
                                    <div class="card border-0 shadow-sm text-center">
                                        <div class="card-body">
                                            <i class="fa-solid fa-arrows-rotate fa-2x text-warning mb-2"></i>
                                            <h6>Utenze Iscrivendo/Cancellando</h6>
                                            <h4>@ViewBag.UtenzeIscrivendoCancellando</h4>
                                        </div>
                                    </div>
                                </div>

                                <!-- Stat Box 5 -->
                                <div class="col-md-4">
                                    <div class="card border-0 shadow-sm text-center">
                                        <div class="card-body">
                                            <i class="fa-solid fa-house fa-2x text-primary mb-2"></i>
                                            <h6>Utenze Domestiche</h6>
                                            <h4>@ViewBag.UtenzeDomestiche</h4>
                                        </div>
                                    </div>
                                </div>

                                <!-- Stat Box 6 -->
                                <div class="col-md-4">
                                    <div class="card border-0 shadow-sm text-center">
                                        <div class="card-body">
                                            <i class="fa-solid fa-building fa-2x text-secondary mb-2"></i>
                                            <h6>Utenze non Domestiche</h6>
                                            <h4>@ViewBag.UtenzeNonDomestiche</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />
                        <p class="lead mb-4 text-muted">Di seguito trovi le utenze registrate per l'ente selezionato.</p>

                        <div class="table-responsive w-100" id="tableWrapper" style="display: none;"> <!-- nascosta finchÃ© carica -->
                            <table id="utenzeTable" class="table table-hover align-middle border-bottom w-100">
                                <thead>
                                    <tr>
                                        <th class="text-center">Id Acquedotto</th>
                                        <th class="text-center">Matricola</th>
                                        <th class="text-center">Cognome</th>
                                        <th class="text-center">Nome</th>
                                        <th class="text-center">Sesso</th>
                                        <th class="text-center">Ubicazione</th>
                                        <th class="text-center">Civico</th>
                                        <th class="text-center">Stato</th>
                                        <th class="text-center">Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@item.idAcquedotto</td>
                                            <td class="text-center">@item.matricolaContatore</td>
                                            <td><span class="fw-semibold">@item.cognome</span></td>
                                            <td><span class="fw-semibold">@item.nome</span></td>
                                            <td><span class="text-center">@item.sesso</span></td>
                                            <td>@item.indirizzoUbicazione</td>
                                            <td class="text-center">@item.numeroCivico</td>
                                            <td class="text-center">@item.stato</td>
                                            <td class="text-center">
                                                <a class="btn btn-sm btn-light border me-1" title="Modifica Utenza"
                                                   href="@Url.Action("Modifica", "Utenze", new { id = item.id })">
                                                    <i class="bi bi-pencil-square text-primary"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center shadow-sm rounded-3">
                            <i class="bi bi-exclamation-triangle me-2"></i> Nessun dato di utenze trovato per l'ente selezionato.
                        </div>
                    }

                    @if(ViewBag.Ruolo != "OPERATORE"){
                        <div class="d-grid mt-4">
                            <a href="@Url.Action("Index", "Utenze")" class="btn btn-outline-secondary btn-lg shadow-sm">
                                <i class="bi bi-arrow-left-circle me-2"></i> Torna alla Selezione Ente
                            </a>
                        </div>
                    }else{
                        <div class="d-grid mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg shadow-sm">
                            <i class="bi bi-arrow-left-circle me-2"></i> Torna alla Home
                        </a>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
   <script>

     $(document).ready(function () {
            $("#loadingBarContainer").show();
                var progress = 0;
                var interval = setInterval(function () {
                    if (progress < 90) {
                        progress += 10;
                        $("#loadingBar").css("width", progress + "%");
                    }
                }, 300);
                
            var utenzeTable = $('#utenzeTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                responsive: true,
                language: { url: "https://cdn.datatables.net/plug-ins/2.0.8/i18n/it-IT.json" },
                dom: '<"row mb-3"<"col-sm-6"l><"col-sm-6 text-end"Bf>>t<"row mt-3"<"col-sm-6"i><"col-sm-6 text-end report"p>>',
                buttons: [
                    {
                        text: '<i class="bi bi-plus-circle me-1"></i> Aggiungi',
                        className: 'btn btn-sm btn-success',
                        action: function () {
                            window.location.href = '@Url.Action("Create", "Utenze", new { idEnte = @selectedEnteId })';
                        }
                    }
                ],
            }); 
            utenzeTable.on('init', function () {
                clearInterval(interval);
                $("#loadingBar").css("width", "100%");
                setTimeout(function () {
                    $("#loadingBarContainer").fadeOut();
                    $("#tableWrapper").fadeIn(); 
                }, 500);
            });
        }); 
   </script>
}
