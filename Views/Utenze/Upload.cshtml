@{
    ViewData["Title"] = "Carica Utenze Idriche";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0">Carica Utenze Idriche</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Utenze" asp-action="Upload" 
                          method="post" enctype="multipart/form-data" onsubmit="showLoader()">
                        
                        @* --- SELECT ENTE QUI --- *@
                        <div class="mb-3">
                            <label for="selectedEnteId" class="form-label">Seleziona l'Ente</label>
                            <select id="selectedEnteId" name="selectedEnteId" class="form-select" required>
                                <option value="">-- Seleziona un Ente --</option>
                                @if (ViewBag.Enti != null)
                                {
                                    foreach (var ente in ViewBag.Enti)
                                    {
                                        <option value="@ente.id">@ente.nome</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="csv_file" class="form-label">Seleziona file</label>
                            <input type="file" name="csv_file" class="form-control" required accept=".csv">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Carica File</button>
                        </div>
                    </form>

                    <!-- Loader nascosto inizialmente -->
                    <div id="loader" class="text-center mt-3" style="display:none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Caricamento...</span>
                        </div>
                        <p class="mt-2">Elaborazione in corso, attendere...</p>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-info mt-3" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showLoader() {
            document.getElementById("loader").style.display = "block";
        }
    </script>
}
