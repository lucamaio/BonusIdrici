@model IEnumerable<Models.ViewModels.ReportViewModel>
@{
    ViewData["Title"] = "Riepilogo Dati Ente";
    var selectedEnteId = ViewBag.SelectedEnteId;
    var selectedEnteNome = ViewBag.SelectedEnteNome;
    var ruolo = ViewBag.Ruolo;
    var Reports = ViewBag.Reports;
}

<div class="container-xxl flex-grow-1 py-5">
    <div class="card shadow-sm border-0 rounded-4">
        <!-- Header -->
        <div class="card-header header-classic border-0 rounded-top-4 d-flex flex-column align-items-center p-4">
            <h3 class="mb-1 fw-bold">
                <i class="bi bi-building me-2"></i> Domande Disponibili - 
                <span class="fw-semibold">@selectedEnteNome</span>
            </h3>
            <small>ID Ente: @selectedEnteId</small>
        </div>

           <!-- Barra di caricamento -->
            <div id="loadingBarContainer" style="display: none;">
                <div id="loadingBar" role="progressbar"></div>
            </div>

        <!-- Body -->
        <div class="card-body p-4">
            @if (Reports != null)
            {
                <p class="lead mb-4 text-muted">Seleziona una data di inserimento per scaricare i domande correlati.</p>

                <div class="table-responsive">
                    <table id="elencoDomande" class="table table-hover align-middle border-bottom">
                        <thead>
                            <tr>
                                <th class="text-center">Elaborazione</th>
                                <th class="text-center">Data Elaborazione</th>
                                <th class="text-center">Stato</th>
                                <th class="text-center">Serie</th>
                                <th class="text-center">Numero Record</th>
                                <th class="text-center">Elabotato da</th>
                                <th class="text-center">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Reports)
                            {
                                var dataUrl = report.DataCreazione.ToString("yyyy-MM-dd HH:mm:ss");
                                var esportatoda = report.mese + " " + report.anno;
                                  <tr>
                                    <td class="text-center"><span>@esportatoda</span></td>
                                    <td class="text-center"><span>@dataUrl</span></td>
                                    <td class="text-center"><span>@report.stato</span></td>
                                    <td class="text-center"><span>@report.serie</span></td>
                                    <td class="text-center"><span>@report.count</span></td>
                                    <td class="text-center"><span>@report.Username</span></td>
                                    
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center align-items-center gap-2">
                                            <!-- Pulsante Dettaglio -->
                                            <a class="btn btn-sm btn-light border" 
                                            href="@Url.Action("Dettails", new { idReport = report.id })"
                                            title="Visualizza dettaglio report">
                                                <i class="bi bi-eye text-primary"></i>
                                            </a>

                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("VariaSerie", "Report",  new {idReport = report.id})">
                                                            Varia Serie
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("ScaricaCsv",  new { idReport = report.id, tipoEsportazione = "Esito Bonus Idrico" })">
                                                            <i class="bi bi-download me-2 text-anagrafe"></i> Esito Bonus Idrico
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("ScaricaCsv", new { idReport = report.id, tipoEsportazione = "Esito Competenza Territoriale" })">
                                                            <i class="bi bi-download me-2 text-domande"></i> Competenza Territoriale
                                                        </a>
                                                    </li>
                                                    @if( ruolo == "ADMIN"){
                                                        <li>
                                                            <a class="dropdown-item" href="@Url.Action("ScaricaCsv", new { idReport = report.id, tipoEsportazione = "Siscom" })">
                                                                <i class="bi bi-download me-2 text-utenza"></i> File Siscom
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="@Url.Action("ScaricaCsv", new { idReport = report.id, tipoEsportazione = "Debug" })">
                                                                <i class="bi bi-download me-2 text-info"></i> Debug
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div> 
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center shadow-sm rounded-3">
                    <i class="bi bi-exclamation-triangle me-2"></i> Nessun dato disponibile per l'ente selezionato.
                </div>
            }

            @if(ruolo != "OPERATORE"){
                        <div class="d-grid mt-4">
                            <a href="@Url.Action("Index", "Report")" class="btn btn-outline-secondary btn-lg shadow-sm">
                                <i class="bi bi-arrow-left-circle me-2"></i> Torna alla Selezione Ente
                            </a>
                        </div>
                    }else{
                        <div class="d-grid mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg shadow-sm">
                            <i class="bi bi-arrow-left-circle me-2"></i> Torna alla Home
                        </a>
                    </div>
                    }      
        </div>
    </div>
</div>
