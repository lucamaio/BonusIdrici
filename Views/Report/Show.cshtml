@model IEnumerable<BonusIdrici2.Models.ViewModels.RiepilogoDatiViewModel>

@{
    ViewData["Title"] = "Riepilogo Dati Ente";
    var selectedEnteId = ViewBag.SelectedEnteId;
    var selectedEnteNome = ViewBag.SelectedEnteNome;
    var ruolo = ViewBag.Ruolo;
}

<div class="container-xxl flex-grow-1 py-5">
    <div class="card shadow-sm border-0 rounded-4">
        <!-- Header -->
        <div class="card-header border-0 rounded-top-4 d-flex flex-column align-items-center p-4"
             style="background: linear-gradient(90deg, rgb(13, 110, 253), rgb(7, 74, 175)); color: #fff; fill: #fff;">
            <h3 class="mb-1 fw-bold">
                <i class="bi bi-building me-2"></i> Report Disponibili - 
                <span class="fw-semibold">@selectedEnteNome</span>
            </h3>
            <small>ID Ente: @selectedEnteId</small>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            @if (Model != null && Model.Any())
            {
                <p class="lead mb-4 text-muted">Seleziona una data di inserimento per scaricare i report correlati.</p>

                <div class="table-responsive">
                    <table id="riepilogoTableReport" class="table table-hover align-middle border-bottom">
                        <thead>
                            <tr>
                                <th class="text-center">Data Elaborazione</th>
                                <th class="text-center">Elabotato da</th>
                                <th class="text-center">Anno Validit√†</th>
                                <th class="text-center">Numero Record</th>
                                <th class="text-center">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var dataUrl = item.DataCreazione?.ToString("yyyy-MM-dd");
                                <tr>
                                    <td><span class="fw-semibold">@item.DataCreazione?.ToString("dd/MM/yyyy")</span></td>
                                    <td><span class="fw-semibold">@item.Username</span></td>
                                    <td><span class="fw-semibold">@item.annoValidita</span></td>
                                    <td>
                                        <span class="badge bg-label-primary rounded-pill px-3 py-2" style="color: #000">
                                            @item.NumeroDatiInseriti
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center align-items-center gap-2">
                                            <!-- Pulsante Dettaglio -->
                                            <a class="btn btn-sm btn-light border" 
                                            href="@Url.Action("Dettails", new { selectedEnteId = selectedEnteId, data = dataUrl })"
                                            title="Visualizza dettaglio report">
                                                <i class="bi bi-eye text-primary"></i>
                                            </a>

                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("ScaricaCsv",  new { enteId = selectedEnteId, DataCreazione = dataUrl, tipoReport = "Esito Bonus Idrico" })">
                                                            <i class="bi bi-download me-2 text-success"></i> Esito Bonus Idrico
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("ScaricaCsv", new { enteId = selectedEnteId, DataCreazione = dataUrl, tipoReport = "Esito Competenza Territoriale" })">
                                                            <i class="bi bi-download me-2 text-info"></i> Competenza Territoriale
                                                        </a>
                                                    </li>
                                                    @if( ruolo == "ADMIN"){
                                                        <li>
                                                            <a class="dropdown-item" href="@Url.Action("ScaricaCsv", new { enteId = selectedEnteId, DataCreazione = dataUrl, tipoReport = "Siscom" })">
                                                                <i class="bi bi-download me-2 text-info"></i> File Siscom
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center shadow-sm rounded-3">
                    <i class="bi bi-exclamation-triangle me-2"></i> Nessun dato disponibile per l'ente selezionato.
                </div>
            }

            @if(ruolo !="OPERATORE"){
                        <div class="d-grid mt-4">
                            <a href="@Url.Action("Index", "Report")" class="btn btn-outline-secondary btn-lg shadow-sm">
                                <i class="bi bi-arrow-left-circle me-2"></i> Torna alla Selezione Ente
                            </a>
                        </div>
                    }else{
                        <div class="d-grid mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg shadow-sm">
                            <i class="bi bi-arrow-left-circle me-2"></i> Torna alla Home
                        </a>
                    </div>
                    }      
        </div>
    </div>
</div>