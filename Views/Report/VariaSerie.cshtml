@model BonusIdrici2.Models.ViewModels.RiepilogoDatiViewModel

@{
    ViewData["Title"] = "Varia Serie";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0">Varia Serie</h3>
                </div>
                <div class="card-body p-5">
                    <form asp-controller="Report" asp-action="UpdateSerie" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="idEnte" value="@Model.IdEnte" />
                        <input type="hidden" name="idAto" value="@Model.idAto" />

                        <div class="mb-3">
                            <label for="serie" class="form-label">Serie</label>
                            <input type="number" id="serie" name="serie" min="0" max="5" placeholder="0" value="@Model.serie" class="form-control" required>
                            <div class="form-text">
                                Indicare il numero di fatture annuali per ogni persona. 
                                Se ogni anno la fatturazione avviene una sola volta, lasciare come valore <strong>0</strong>.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Dettails","Report", new { selectedEnteId = Model.IdEnte , idAto = Model.idAto })" class="btn btn-outline-secondary btn-lg rounded-3">
                                <i class="bi bi-arrow-left"></i> Torna indietro
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg rounded-3">
                                <i class="bi bi-check2-circle"></i> Aggiorna
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
