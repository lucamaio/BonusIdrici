@model IEnumerable<BonusIdrici2.Models.ViewModels.RiepilogoDatiViewModel>

@{
    ViewData["Title"] = "Riepilogo Report";
    var idEnte = ViewBag.SelectedEnteId;
    var selectedEnteNome = ViewBag.SelectedEnteNome;

    DateTime? data1 =ViewBag.Data != null ? ViewBag.Data : Model != null && Model.Any() ?  Model.First().DataCreazione : null;
    string? data =  ViewBag.Data != null ? ViewBag.Data.ToString("dd/MM/yyyy") : null;

    var ruolo = ViewBag.Ruolo;
    string? idAto = ViewBag.idAto != null ? ViewBag.idAto : Model != null && Model.Any() ? Model.First().idAto : (string?) null;
    
}

<div class="container-xxl flex-grow-1 py-5">
    <div class="card shadow-sm border-0 rounded-4">
        <!-- Header -->
        <div class="card-header header-report border-0 rounded-top-4 d-flex flex-column align-items-center p-4">
            <h3 class="mb-1 fw-bold">
                <i class="bi bi-building me-2"></i> Dattagli Report - 
                <span class="fw-semibold">
                    @if(data != null){
                        @data;
                    }else{
                       @idAto;
                    }
                </span>
            </h3>
            <small>Ente: @selectedEnteNome</small>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            @if (Model != null && Model.Any())
            {
                <div style="background-color: #f8f9fa; border-radius: 12px;">
                        <div class="row g-3">
                            <!-- Stat Box 1 -->
                            <div class="col-md-4">
                                <div class="card border-0 shadow-sm text-center">
                                    <div class="card-body">
                                        <i class="fa-solid fa-file fa-2x text-primary mb-2"></i>
                                        @* <i class="fa-solid fa-city fa-2x "></i> *@
                                        <h6>Totale Domande</h6>
                                        <h4>@ViewBag.TotaleDomande</h4>
                                    </div>
                                </div>
                            </div>

                            <!-- Stat Box 2 -->
                            <div class="col-md-4">
                                <div class="card border-0 shadow-sm text-center">
                                    <div class="card-body">
                                        <i class="fa-solid fa-xmark fa-2x text-danger mb-2"></i>
                                        @* <i class="fa-solid fa-check-to-slot fa-2x text-success mb-2"></i> *@
                                        <h6>Incongruenze Trovate</h6>
                                        <h4>@ViewBag.IncongruenzeTrovate</h4>
                                    </div>
                                </div>
                            </div>
                            <!-- Stat Box 3 -->
                            <div class="col-md-4">
                                <div class="card border-0 shadow-sm text-center">
                                    <div class="card-body">
                                        <i class="fa-solid fa-circle-check fa-2x text-success mb-2"></i>
                                        <h6>Domande Esito 1</h6>
                                        <h4>@ViewBag.TotaleAccettate</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row g-3">
                            <!-- Esito 2 -->
                            <div class="col-md-4">
                                <div class="card border-0 shadow-sm text-center">
                                    <div class="card-body">
                                        <i class="fa-solid fa-lightbulb fa-2x text-primary mb-2"></i>
                                        <h6>Esito 2</h6>
                                        <h4>@ViewBag.TotaleEsito2</h4>
                                    </div>
                                </div>
                            </div>

                            <!-- Esito 3 -->
                            <div class="col-md-4">
                                <div class="card border-0 shadow-sm text-center">
                                    <div class="card-body">
                                        <i class="fa-solid fa-exclamation-triangle fa-2x text-warning mb-2"></i>
                                        <h6>Esito 3</h6>
                                        <h4>@ViewBag.TotaleEsito3</h4>
                                    </div>
                                </div>
                            </div>

                            <!-- Esito 4 -->
                            <div class="col-md-4">
                                <div class="card border-0 shadow-sm text-center">
                                    <div class="card-body">
                                        <i class="fa-solid fa-times-circle fa-2x text-danger mb-2"></i>
                                        <h6>Esito 4</h6>
                                        <h4>@ViewBag.TotaleEsito4</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
                 
                <hr class="my-4" />
                 <p class="lead mb-4 text-muted">Consulta tutte le domande relative al Report selezionato</p>
                 <br>

                <div class="table-responsive">
                    <table id="dettagliReportTable" class="table table-hover align-middle border-bottom">
                        <thead>
                            <tr>
                                 <th class="text-center">idAto</th>
                                <th class="text-center">Codice Bonus</th>
                                <th class="text-center">Codice Fiscale</th>
                                <th class="text-center">Id Fornitura</th>
                                <th class="text-center">Componenti</th>
                                <th class="text-center">Esito str</th>
                                <th class="text-center">Esito</th>
                                <th class="text-center">Incongruente</th>
                                @* <th class="text-center">Serie</th>
                                <th class="text-center">MC</th> *@
                                <th class="text-center">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center"><span>@item.idAto</span></td>
                                     <td class="fw-semibold text-center"><span >@item.codiceBonus</span></td>
                                    <td class="fw-semibold text-center"><span>@item.codiceFiscale</span></td>
                                    <td class="text-center"><span>@item.idFornitura</span></td>
                                    <td class="text-center"><span>@item.numeroComponenti</span></td>
                                    <td class="text-center">
                                            @if (string.IsNullOrEmpty(item.esitoStr))
                                            {
                                                <span class="badge bg-secondary">N/A</span>
                                            }
                                            else if (item.esitoStr.Equals("Si", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <span class="badge bg-success">Si</span>
                                            }
                                            else if (item.esitoStr.Equals("No", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <span class="badge bg-danger">No</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">@item.esitoStr</span>
                                            }
                                    </td>
                                    <td class="text-center">
                                        @switch (item.esito)
                                        {
                                            case "01":
                                                <span class="badge bg-success">1</span>
                                                break;
                                            case "02":
                                                <span class="badge bg-primary">2</span>
                                                break;
                                            case "03":
                                                <span class="badge bg-warning text-dark">3</span>
                                                break;
                                            case "04":
                                                <span class="badge bg-danger">4</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">N/A</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                         @if (item.incongruenze == false)
                                            {
                                                <span class="badge bg-danger">Falso</span>
                                            }
                                            else if (item.incongruenze == true)
                                            {
                                                <span class="badge bg-success">Vero</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">N/A</span>
                                            }
                                    </td>
                                    @* <td class="text-center"><span>@item.serie</span></td>
                                    <td class="text-center"><span>@item.mc</span></td> *@
                                    <td class="text-center">
                                        <a class="btn btn-sm btn-light border me-1" title="Varia"
                                            href="@Url.Action("Varia", "Report", new { id = item.id })">
                                            <i class="bi bi-pencil-square text-primary"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center shadow-sm rounded-3">
                    <i class="bi bi-exclamation-triangle me-2"></i> Nessun dato disponibile per l'ente selezionato.
                </div>
            }
            <hr class="my-4" />

            @if(ruolo !="OPERATORE"){
                        <div class="d-grid mt-4">
                            <a href="@Url.Action("Index", "Report")" class="btn btn-outline-secondary btn-lg shadow-sm">
                                <i class="bi bi-arrow-left-circle me-2"></i> Torna alla Selezione Ente
                            </a>
                        </div>
                    }else{
                        <div class="d-grid mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg shadow-sm">
                            <i class="bi bi-arrow-left-circle me-2"></i> Torna alla Home
                        </a>
                    </div>
                    }      
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Mostra barra all'inizio
            $("#loadingBarContainer").show();
            var progress = 0;
            var interval = setInterval(function () {
                if (progress < 90) {
                    progress += 10;
                    $("#loadingBar").css("width", progress + "%");
                }
            }, 300);
            

            var table = $('#dettagliReportTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                responsive: true,
                language: { url: "https://cdn.datatables.net/plug-ins/2.0.8/i18n/it-IT.json" },
                dom: '<"row mb-3"<"col-sm-6"l><"col-sm-6 text-end"Bf>>t<"row mt-3"<"col-sm-6"i><"col-sm-6 text-end"p>>',
                buttons: [
                    {
                        text: '<i class="bi bi-plus-circle me-1"></i> Varia Serie',
                        className: 'btn btn-sm btn-success',
                        action: function () {
                            window.location.href = '@Url.Action("VariaSerie", "Report")'
                                + '?idEnte=@idEnte&idAto=@idAto';
                        }
                    }
                ]
            });

            // Quando la tabella è pronta → completa la barra e mostra tabella
            table.on('init', function () {
                clearInterval(interval);
                $("#loadingBar").css("width", "100%");
                setTimeout(function () {
                    $("#loadingBarContainer").fadeOut();
                    $("#tableWrapper").fadeIn(); // 🔹 mostra la tabella solo adesso
                }, 500);
            });
        });
    </script>
}
