@{
    ViewData["Title"] = "Sicurezza";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <!-- HEADER -->
                <div class="card-img-top" style="height: 180px; background: linear-gradient(120deg, #0d6efd 0%, #20c997 100%);">
                </div>

                <div class="card-body mt-4 pt-2">
                    <!-- NAV TABS -->
                    <ul class="nav nav-pills nav-justified mb-4 gap-2">
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Dettagli" class="nav-link d-flex align-items-center gap-2">
                                <i class="bi bi-person-lines-fill"></i>
                                <span>Personale</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Sicurezza" class="nav-link active d-flex align-items-center gap-2">
                                <i class="bi bi-shield-lock"></i>
                                <span>Sicurezza</span>
                            </a>
                        </li>
                    </ul>

                    <!-- FORM CAMBIO PASSWORD -->
                    <form asp-controller="Account" asp-action="ChangePassword" method="post">
                        <!-- PASSWORD ATTUALE -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-lock-fill me-2 text-primary"></i>Password attuale
                            </label>
                            <div class="input-group">
                                <input type="password" id="currentPassword" name="CurrentPassword" class="form-control shadow-sm" required>
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="currentPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>

                        <!-- NUOVA PASSWORD -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-key-fill me-2 text-primary"></i>Nuova password
                            </label>
                            <div class="input-group">
                                <input type="password" id="newPassword" name="NewPassword" class="form-control shadow-sm" required>
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="newPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>

                        <!-- CONFERMA PASSWORD -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-check2-circle me-2 text-primary"></i>Conferma password
                            </label>
                            <div class="input-group">
                                <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control shadow-sm" required>
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="confirmPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>

                        <!-- AZIONI -->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
                                <i class="bi bi-save me-2"></i>Salva modifiche
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-pills .nav-link.active {
        background: linear-gradient(90deg, #0d6efd 60%, #20c997 100%);
        color: #fff;
        box-shadow: 0 2px 8px rgba(13,110,253,0.15);
    }
    .nav-pills .nav-link:not(.active):hover {
        background: #f0f4fa;
        color: #0d6efd;
    }
</style>

@section Scripts {
    <script>
        document.querySelectorAll('.toggle-password').forEach(btn => {
            btn.addEventListener('click', () => {
                const targetId = btn.getAttribute('data-target');
                const input = document.getElementById(targetId);
                const icon = btn.querySelector('i');

                if (input.type === "password") {
                    input.type = "text";
                    icon.classList.remove("bi-eye");
                    icon.classList.add("bi-eye-slash");
                } else {
                    input.type = "password";
                    icon.classList.remove("bi-eye-slash");
                    icon.classList.add("bi-eye");
                }
            });
        });
    </script>
}
