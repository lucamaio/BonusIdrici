@using System.Linq
@{
    ViewData["Title"] = "Modifica Utente";
    User utente = ViewBag.Utente;
    List<Ruolo> ruoli = ViewBag.Ruoli as List<Ruolo> ?? new List<Ruolo>();
    List<Ente> enti = ViewBag.Enti as List<Ente> ?? new List<Ente>();
    int idRuolo = utente != null ? utente.idRuolo : 0;
    IEnumerable<int> selectedEntiIds = ViewBag.SelectedEntiIds as IEnumerable<int> ?? Enumerable.Empty<int>();
}

<div class="report-page container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-11">
            <div class="modern-card shadow rounded-4 border-0">

                <!-- HEADER -->
                <div class="card-header header-account border-0 rounded-top-4 d-flex flex-column align-items-center p-4">
                    <h3 class="mb-1 fw-bold fs-4">
                        <i class="fa-solid fa-pen-to-square me-2"></i>
                        <span class="fw-semibold">Modifica Utente</span>
                    </h3>
                </div>

                <!-- FORM -->
                <div class="modern-card-body p-4 small">
                    <form asp-controller="Account" asp-action="Update" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@utente?.id" />

                        <div class="accordion" id="accordionEnte">

                            <!-- SEZIONE 1 -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading1">
                                    <button class="accordion-button fs-6" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
                                        <i class="fa-solid fa-city me-2"></i> Dati Identificativi
                                    </button>
                                </h2>
                                <div id="collapse1" class="accordion-collapse collapse show" aria-labelledby="heading1"
                                     data-bs-parent="#accordionEnte">
                                    <div class="accordion-body">
                                        <div class="row row-cols-1 row-cols-md-3 g-4">

                                            <div>
                                                <label for="username" class="form-label">Username: *</label>
                                                <input type="text" class="form-control" id="username" name="username" value="@utente?.Username" required>
                                            </div>

                                            <div>
                                                <label for="cognome" class="form-label">Cognome: *</label>
                                                <input type="text" class="form-control" id="cognome" name="cognome" value="@utente?.Cognome" maxlength="50" required>
                                            </div>

                                            <div>
                                                <label for="nome" class="form-label">Nome: *</label>
                                                <input type="text" class="form-control" id="nome" name="nome" value="@utente?.Nome" maxlength="50" required>
                                            </div>

                                            <div>
                                                <label for="email" class="form-label">Email: *</label>
                                                <input type="email" class="form-control" id="email" name="email" value="@utente?.Email" required>
                                            </div>

                                            <div class="col position-relative">
                                                <label for="password" class="form-label fw-bold">Password: *</label>
                                                <div class="input-group">
                                                    <input type="password" class="form-control form-control-lg rounded-3" id="password" name="password" value="@utente?.Password" required>
                                                    <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                                                        <i class="fa-solid fa-eye"></i>
                                                    </button>
                                                </div>
                                            </div>

                                            <div class="col">
                                                <label for="ruolo" class="form-label">Ruolo: *</label>
                                                <select class="form-select" id="ruolo" name="ruolo" required>
                                                    @foreach (var role in ruoli)
                                                    {
                                                        if (role.id == idRuolo)
                                                        {
                                                            <option value="@role.id" selected="selected">@role.nome</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@role.id">@role.nome</option>
                                                        }
                                                    }
                                                </select>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            @* SEZIONE ENTI: visibile solo se utente attualmente ha ruolo == 2 *@
                            @if (idRuolo == 2)
                            {
                                @* <div class="accordion-item">
                                    <h2 class="accordion-header" id="heading2">
                                        <button class="accordion-button fs-6" type="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapse2" aria-expanded="true" aria-controls="collapse2">
                                            <i class="fa-solid fa-home me-2"></i> Enti gestiti
                                        </button>
                                    </h2>
                                    <div id="collapse2" class="accordion-collapse collapse show" aria-labelledby="heading2" data-bs-parent="#accordionEnte">
                                        <div class="accordion-body">
                                            <div class="row row-cols-1 row-cols-md-3 g-4">
                                                <div class="col">
                                                    <label for="enti" class="form-label">Enti: *</label>
                                                    @Html.ListBox(
                                                        "enti",
                                                        new MultiSelectList(enti, "id", "nome", selectedEntiIds),
                                                        new { @class = "form-select", id = "enti", required = "required" }
                                                    )
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div> *@
                            }

                            <!-- METADATI -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading3">
                                    <button class="accordion-button collapsed fs-6" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
                                        <i class="fa-solid fa-database me-2"></i> Metadati
                                    </button>
                                </h2>
                                <div id="collapse3" class="accordion-collapse collapse" aria-labelledby="heading3"
                                     data-bs-parent="#accordionEnte">
                                    <div class="accordion-body">
                                        <div class="row row-cols-1 row-cols-md-3 g-4">
                                            <div class="col">
                                                <label for="dataCreazione" class="form-label">Data Creazione</label>
                                                <input class="form-control readonly-field" type="date" id="dataCreazione" name="dataCreazione"
                                                       value="@(utente?.dataCreazione?.ToString("yyyy-MM-dd") ?? "")" readonly>
                                            </div>

                                            <div class="col">
                                                <label for="dataAggiornamento" class="form-label">Data Aggiornamento</label>
                                                <input class="form-control readonly-field" type="date" id="dataAggiornamento" name="dataAggiornamento"
                                                       value="@(utente?.dataAggiornamento?.ToString("yyyy-MM-dd") ?? "")" readonly>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- BOTTONI -->
                        <hr class="my-4" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Show","Account")"
                               class="btn btn-outline-secondary btn-sm rounded-3">
                                <i class="fa-solid fa-arrow-left"></i> Torna alla consultazione
                            </a>

                            <!-- Pulsante centrale -->
                            <a href="@Url.Action("ChangePasswordAdmin","Account", new { id = utente?.id })"
                               class="btn btn-warning btn-sm rounded-3 mx-3">
                                <i class="fa-solid fa-key"></i> Modifica Password
                            </a>

                            <button type="submit" class="btn btn-primary btn-sm rounded-3">
                                <i class="fa-solid fa-check"></i> Aggiorna Utente
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        const passwordInput = document.getElementById("password");
        const icon = this.querySelector("i");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            passwordInput.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    });
</script>
