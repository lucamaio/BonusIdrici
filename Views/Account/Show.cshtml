@{
    ViewData["Title"] = "Esplora tutti gli Account";
    var utenti = ViewBag.Utenti;
}
<div class="container-xxl flex-grow-1 py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-4 w-100">
                <!-- Header -->
                <div class="card-header header-classic border-0 rounded-top-4 d-flex flex-column align-items-center p-4">
                    <div class="d-flex fw-bold justify-content-center align-items-center">
                        <i class="bi bi-people-fill me-2"></i>
                        <h3 class="fw-bold mb-0">Utenze</span></h3>
                    </div>
                </div>

                <!-- Barra di caricamento -->
                <div id="loadingBarContainer" style="display: none;">
                    <div id="loadingBar" role="progressbar"></div>
                </div>

                <!-- Body -->
                <div class="card-body p-4 position-relative">
                    @if (utenti != null && utenti?.Count > 0)
                    {
                       <div class="info-text mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            <span>Di seguito sono elencate tutti gli account abilitati ad accedere al sistema.</span>
                        </div>

                         <div class="d-flex justify-content-end mb-3">
                        <a href="@Url.Action("Create", "Account")" class="btn btn-modern-add shadow-sm">
                            <i class="bi bi-plus-circle me-2"></i> Aggiungi Utente
                        </a>
                    </div>

                        <div class="table-responsive w-100" id="tableWrapper" style="display: none;">
                            <table id="accountTable" class="table table-hover align-middle border-bottom w-100">
                                <thead>
                                    <tr>
                                        <th class="text-center">Username</th>
                                        <th class="text-center">Email</th>
                                        <th class="text-center">Cognome</th>
                                        <th class="text-center">Nome</th>
                                        <th class="text-center">Ruolo</th>
                                        <th class="text-center">Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var utente in utenti)
                                    {
                                        <tr>
                                            <td><span class="fw-semibold">@utente.Username</span></td>
                                            <td><span class="fw-semibold">@utente.Email</span></td>
                                            <td><span>@utente.Cognome</span></td>
                                            <td><span>@utente.Nome</span></td>
                                            <td class="text-center">
                                                @if (utente.getRuolo() == "ADMIN")
                                                {
                                                    <span class="badge bg-danger">ADMIN</span>
                                                }
                                                else if (utente.getRuolo() == "OPERATORE")
                                                {
                                                    <span class="badge bg-success">OPERATORE</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">N/A</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a class="btn btn-modern-edit btn-sm" title="Modifica Profilo"
                                                   href="@Url.Action("Modifica", "Account", new { id = utente.id })">
                                                    <i class="bi bi-pencil-square text-primary"></i>
                                                </a> 
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center shadow-sm rounded-3 mb-3">
                            <i class="bi bi-exclamation-triangle me-2"></i> Nessun Utente trovato!.
                        </div>

                        <div class="d-flex justify-content-end mb-3">
                            <a href="@Url.Action("Create", "Account")"
                               class="btn btn-account btn-sm shadow-sm">
                                <i class="bi bi-plus-circle me-1"></i> Aggiungi
                            </a>
                        </div>
                    }       
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Mostra il loader e nascondi la tabella all'inizio
            // La tabella è già nascosta da style="display: none;"
            $("#loadingBarContainer").show();

            // Inizializza DataTable, che farà tutto il lavoro.
            // L'evento initComplete gestirà la fine del caricamento.
            var accountTable = $('#accountTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                responsive: true,
                pageLength: 25,
                lengthMenu: [10, 25, 50, 100],
                language: { url: "https://cdn.datatables.net/plug-ins/2.0.8/i18n/it-IT.json" },
                dom: '<"d-flex justify-content-between align-items-center mb-3"l f>t<"row mt-3"<"col-sm-6"i><"col-sm-6 text-end"p>>',
                buttons: [],
                drawCallback: function (settings) {
                    var api = this.api();
                    var pages = api.page.info().pages;
                    if (pages <= 1) {
                        $(api.table().container()).find('.dataTables_paginate').hide();
                        $(api.table().container()).find('.dataTables_length').hide();
                    } else {
                        $(api.table().container()).find('.dataTables_paginate').show();
                        $(api.table().container()).find('.dataTables_length').show();
                    }
                }
            });

            // Quando DataTable è pronto, nascondi il loader e mostra la tabella
            accountTable.on('init', function () {
                $("#loadingBarContainer").hide();
                $("#tableWrapper").show();
            });
        });
    </script>
}
